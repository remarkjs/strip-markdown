{
  "name": "www-strip-markdown",
  "private": true,
  "license": "MIT",
  "repository": "remarkjs/strip-markdown",
  "bugs": "https://github.com/remarkjs/strip-markdown/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "type": "module",
  "devDependencies": {
    "cssnano": "^5.0.0",
    "esbuild": "^0.12.0",
    "postcss-cli": "^8.0.0",
    "postcss-preset-env": "^6.0.0",
    "prettier": "^2.0.0",
    "rehype-cli": "^11.0.0",
    "rehype-preset-minify": "^6.0.0",
    "rehype-prevent-favicon-request": "^3.0.0",
    "remark-cli": "^10.0.0",
    "remark-parse": "^10.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "remark-stringify": "^10.0.0",
    "strip-markdown": "^5.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^22.0.0",
    "unified": "^10.0.0",
    "xo": "^0.44.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix && stylelint src/index.css --fix",
    "build:js": "esbuild src/index.js --bundle --minify --target=es6 --outfile=dest/index.nomodule.js && esbuild src/index.js --bundle --minify --target=es2020 --format=esm --outfile=dest/index.module.js",
    "build:css": "postcss src/index.css -o dest/index.css",
    "build:html": "rehype -u preset-minify -u prevent-favicon-request src -o dest",
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "test": "npm run format && npm run build"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "postcss": {
    "plugins": {
      "postcss-preset-env": {},
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
